@model CreateEmployeeViewModel

<div class="card shadow-sm mt-2">
    <div class="card-body">
        <form asp-action="Create" asp-antiforgery="true">
            <div class="form-group mb-3">
                <label asp-for="FirstName"></label>
                <input type="text" asp-for="FirstName" class="form-control" placeholder="Enter your first name">
                <span asp-validation-for="FirstName" class="small text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="LastName"></label>
                <input type="text" asp-for="LastName" class="form-control" placeholder="Enter your last name">
                <span asp-validation-for="LastName" class="small text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="DateOfEmployment"></label>
                <input type="date" asp-for="DateOfEmployment" class="form-control" placeholder="Enter date">
                <span asp-validation-for="DateOfEmployment" class="small text-danger"></span>
            </div>

            <div class="d-flex">
                <input type="submit" class="btn btn-primary me-2" value="Create" />
                <a asp-action="Index" class="btn btn-secondary">Back</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}